<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/writeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="write"
        android:text="Write"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="17dp" />

    <Button
        android:id="@+id/sharedPreferenceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="writeSharedPreference"
        android:text="SharedPreference"
        app:layout_constraintTop_toBottomOf="@+id/writeButton"
        tools:layout_editor_absoluteX="18dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="readSharedPreference"
        android:text="Shared Preference Read"
        app:layout_constraintTop_toBottomOf="@+id/sharedPreferenceButton"
        tools:layout_editor_absoluteX="49dp" />
</androidx.constraintlayout.widget.ConstraintLayout>